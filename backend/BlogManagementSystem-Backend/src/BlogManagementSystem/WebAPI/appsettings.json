{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "BaseDb": "Server=(localdb)\\mssqllocaldb;Database=BlogManagementSystem;Trusted_Connection=true"
  },

  "TokenOptions": {
    "AccessTokenExpiration": 1440,
    "Audience": "blogManagement",
    "Issuer": "blogManagementSystem",
    "RefreshTokenTTL": 2,
    "SecurityKey": "StrongAndSecretKeyStrongAndSecretKeyStrongAndSecretKeyStrongAndSecretKey"
  },

  "WebAPIConfiguration": {
    "APIDomain": "http://localhost:5461/api",
    "AllowedOrigins": [
      "http://localhost:4200",
      "http://localhost:5461"
    ]
  }
}
